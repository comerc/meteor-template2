head
  title simple

body
  +hello(test="123")
  +info

template(name="hello")
  h1 Welcome to Template2! 
  div props: 
    = props.test
  div 
    a.node(href="#") NEW
  form
    input(type="text" value-bind="fieldHead@throttle:500") 
    = state.fieldHead
    input(type="text" value-bind="fieldBody@debounce:500") 
    = state.fieldBody
    button(type="submit") SUBMIT
    button#reset RESET
    = state.submitMessage
  = state.errorMessages
  ul
    +each node in nodes
      li 
        a.node(href="#" data-node-id=node._id)  
          = node.fieldHead  
          | / 
          = node.fieldBody

template(name='info')
  h2 See also
  a(href='https://github.com/comerc/meteor-mvvm-mdl-demo') Demo
  |&nbsp;with&nbsp;
  a(href='https://getmdl.io/') Material Design Lite
